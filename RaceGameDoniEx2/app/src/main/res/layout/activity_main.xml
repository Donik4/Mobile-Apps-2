<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/main_caver"
    tools:context=".MainActivity">

    <ProgressBar    app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/pg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ProgressBar>
    <TextView
         app:layout_constraintTop_toBottomOf="@+id/pg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Locating..."
            android:id="@+id/loctxt" android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <Button
        app:layout_constraintTop_toBottomOf="@+id/loctxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Ignore Location"
        android:id="@+id/igbut" android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></Button>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
         app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="match_parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
